<div class='raw'>
    <div class='col-md-6'>
        <%= image_tag @book.cover.thumb.url %>
        <%= link_to 'edit', edit_book_path(@book) %>
        <%= link_to 'delete', @book, method: :delete %>
    </div>
    <div class='col-md-6'>
        <h1>
            <%= @book.title %>
        </h1>
        <p>
           <%= @book.description %>
        </p>
        <p>
            <%= @book.tags.join(', ') %>
        </p>
    </div>
</div>